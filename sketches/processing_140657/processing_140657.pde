  }
}

class Letter {

  boolean[][] locations = new boolean[7][5];
  float[] setLocX = new float[5];
  float[] setLocY = new float[7];
  float[][] locVarY = new float[7][5];
  float[][] locVarX = new float[7][5];

  Letter() {
  }

  Letter(boolean[][] b, float xOff, float yOff) {
    for (int i = 0; i < b.length; i++) {
      for (int j = 0; j < b[i].length; j++) {
        locations[i][j] = b[i][j];
        setLocX[j] = 5 * j + xOff;
        setLocY[i] = 5 * i + yOff;
      }
    }
  }

  public void display() {
    for (int i = 0; i < locations.length; i++) {
      for (int j = 0; j < locations[i].length; j++) {
        if (locations[i][j]) {
          stroke(255, 5);
          strokeWeight(5);
          line(width/2, height/2, locVarX[i][j], locVarY[i][j]);
          stroke(255, 64, 64, 50);
          point(locVarX[i][j], locVarY[i][j]);
        }
      }
    }
  }

  public void randomize() {

    for (int i = 0; i < locations.length; i++) {
      for (int j = 0; j < locations[i].length; j++) {
        locVarY[i][j] = int(random(400));
        locVarX[i][j] = int(random(400));
      }
    }
  }

  public void moveToLoc() {
    for (int i = 0; i < locations.length; i++) {
      for (int j = 0; j < locations[i].length; j++) {
        if (locVarY[i][j] < setLocY[i]) locVarY[i][j]++;
        if (locVarY[i][j] > setLocY[i]) locVarY[i][j]--;
        if (locVarX[i][j] < setLocX[j]) locVarX[i][j]++;
        if (locVarX[i][j] > setLocX[j]) locVarX[i][j]--;
      }
    }
  }
}



