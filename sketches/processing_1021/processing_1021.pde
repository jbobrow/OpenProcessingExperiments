}

//*loop
float x = 5;

void draw() {

  x = x + .1;
  if (x > 60) {
    x = 60-5;
  }  
  
  
  
//*SOL
fill(0);
ellipse (200,100,x,x);

//*PASTO PRIMERO
noFill ();
curve (x,300,20,390,60,390,100,400);
curve (x,600,20,370,60,390,800,500);
curve (x,600,60,370,60,390,500,500);
curve (x,600,30,200,60,390,500,500);
curve (x,500,100,250,60,390,500,500);
curve (x,500,115,270,60,390,510,510);

//*PASTO SEGUNDO
noFill ();
curve (x,300,120,390,160,390,100,400);
curve (x,600,120,370,160,390,800,500);
curve (x,600,160,370,160,390,500,500);
curve (x,600,130,200,160,390,500,500);
curve (x,500,200,250,160,390,500,500);
curve (x,500,215,270,160,390,510,510);

//*PASTO TERCERO
noFill ();
curve (x,300,220,390,260,390,100,400);
curve (x,600,220,370,260,390,800,500);
curve (x,600,260,370,260,390,500,500);
curve (x,600,230,200,260,390,500,500);
curve (x,500,300,250,260,390,500,500);
curve (x,500,315,270,260,390,510,510);
}




void mousePressed() {
