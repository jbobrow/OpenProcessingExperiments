  class RainDrop {
    color c;
    float ypos;
    float xpos;
    float yspeed;
    
    RainDrop(color RainDropC, float RainDropYpos, float RainDropXpos, float RainDropYspeed) {
      c = RainDropC;
      xpos = RainDropXpos;
      ypos = RainDropYpos;
      yspeed = RainDropYspeed;
    }
    
    void display() {  //overall positioning for the raindrops 
    noStroke();
    fill(c);
    rectMode(CENTER);
    ellipse(xpos,ypos,5,15);  //raindrop piece 1
    ellipse(random(xpos-1),random(ypos-1),5,15); //raindrop piece 2 
   }
     
  


    void move() {  //the code for it to continually move w/o 
      ypos = ypos + yspeed; //stopping 
      if ( ypos > 505 ) {
        ypos = 0;
      }
    }
  }
