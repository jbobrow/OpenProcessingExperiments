
void setup() {
  size (400,400);
  background (150);
}

void draw () {
  
  quad(0,250,0,200,100,200,100,350);
  quad(100,200,100,350,200,250,200,100);
  triangle(200,250,200,100,350,270);

  stroke (250,0,0);
  
if (mousePressed) {
  line(0, 200, 130, 200);
  line(130, 200, 217, 120);
  line(100, 200, 200, 100);
  line(200, 100, 350, 270);
  
  line(50, 200, 130, 300);
  line(130, 300, 218, 120);
  
 stroke(0);
}
}
