
/* set the size of the window */
size(400, 400);

/* define the background color */
background(255);

/* set the fill color to black */
fill(0);

/* draw a circle at position 100, 200 with diameter 20 */
ellipse(100, 200, 20, 20);

/* set the fill color to white */
fill(255);

/* set the weight of lines to 4px */
strokeWeight(4);

/* draw a circle at position 300, 200 with diameter 40 */
ellipse(300, 200, 40, 40);

/* do not draw fills */
noFill();

/* change the ellipseMode to draw from corner */
ellipseMode(CORNER);

/* draw a circle at position 200, 200 with diameter 100 */
ellipse(200, 200, 100, 100);

/* set the stroke color to grey */
stroke(100);

/* change the ellipseMode to draw from center */
ellipseMode(CENTER);

/* draw a circle at position 200, 200 with diameter 100 */
ellipse(200, 200, 100, 100);

/* do not draw strokes */
noStroke();

/* set the fill color to grey */
fill(100);

/* draw a circle at position 200, 200 with diameter 100 */
ellipse(200, 200, 100, 100);
