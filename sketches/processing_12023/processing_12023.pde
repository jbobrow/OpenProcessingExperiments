
void setup() {
  size(199,264);
  noLoop();
}

void draw() {
  background(255);

  for( int y=0; y<6; y++ ) {
    for( int x=0; x<8; x++ ) {
      putChar(floor(random(46)),x,y);
    }
  }
  windows();
}

void putChar(int idx, int cx, int cy) {
  for( int x=0; x<5; x++ ) {
    for( int y=0; y<7; y++ ) {
      if( ((font[idx][x]>>(6-y))&(0x01)) == 1 ) {
        pix(cx*6+x,cy*9+y);
      }
    }
  }
}

void pix(int x, int y) {
  noStroke();
  fill(0);
  rect(x*4+2,y*5,3,5);
}

void windows() {
  stroke(0);
  strokeWeight(1);
  for( int x=1; x<width; x+=4 ) {
    line(x,0,x,height);
  }
}


