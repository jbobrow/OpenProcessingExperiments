//triangle logo for school district that serves three cities/towns

// set size
size(500, 400);
// set background to black
background(150);

// set stroke size
strokeWeight(20);

// set stroke colour to orangey/red
stroke(255,102,0);

// fill blue
fill(100,0,200);

// big blue triangle
triangle(50, 50, 450, 50, 250, 350);

// fill green
fill(51,255,0);

//little triangle top right
triangle(322, 50, 450, 50, 380, 154);

// fill yellow
fill(255,255,20);

//little triangle top left
triangle(188, 50, 119, 154, 50, 50);

// fill pink
fill(255,40,255);

//little triangle bottom
triangle(187, 254, 313, 254, 250, 350);




