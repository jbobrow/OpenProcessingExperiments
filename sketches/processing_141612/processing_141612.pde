
int count;
int starSize;
int childNum;
float distance;

void setup() {

  size( 512, 512 );
  frameRate(15);
  
  count = 0;
  starSize = 50;
  distance = 300;
  childNum = 3;
    
}

void draw() {

  fill( 0, 32, 64, 255);
  rect( 0, 0, width, height );

  noStroke();
  stroke(255, 64, 128,128);
  fill( 255, 224, 64 );
  
  float posX = width / 2;
  float posY = height / 2;

  drawSatellite( posX, posY, starSize/4, mouseY/2, mouseX/80, childNum, count );
  ellipse( posX, posY, starSize, starSize );
  
  textSize(20);
  text("move mouse", 10, 30);

  count++;
  
}

void drawSatellite(float centerX, float centerY, float starSize, float distance, int num, int level, float angle) {

  for(int i=0; i<num; i++) {
  
    float posX = centerX + ( random(distance) * cos( 2 * PI * ( (float)i / (float)num ) + ( angle / 360.0 ) ) );
    float posY = centerY + ( random(distance) * sin( 2 * PI * ( (float)i / (float)num ) + ( angle / 360.0 ) ) );
  
    line(centerX, centerY, posX, posY);
  
    if (level >= 1) {
      drawSatellite(posX, posY, starSize/2, random(distance/2), num, level-1, angle*3);
    }
    
    ellipse(posX, posY, starSize, starSize);
  }
    
}

