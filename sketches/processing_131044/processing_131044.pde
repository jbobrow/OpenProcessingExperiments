
size(300,300);
background(100,300,150);
translate(150,150);
//body
noStroke();
fill(100,100,200);
ellipse(0,200,200,200);
//hair
stroke(0,178,201);
strokeWeight(10);
line(0,-130,0,-100);
fill(0,178,201);
ellipse(0,-100,10,10);
ellipse(0,-130,10,10);
fill(255);
ellipse(3,-130,3,3);
//head
rectMode(CENTER);
fill(100,100,200);
noStroke();
rect(0,0,150,200,100);
ellipse(0,90,70,40);
//eyes
fill(255);
ellipse(-25,-50,40,60);
ellipse(25,-50,40,40);
fill(0);
ellipse(-25,-50,10,30);
ellipse(25,-50,10,10);
//nose
fill(100,100,150);
ellipse(0,0,50,30);
fill(0);
ellipse(-10,0,5,5);
ellipse(10,0,5,5);
//mouth
fill(0);
ellipse(0,50,90,45);
fill(100,100,200);
ellipse(0,30,60,30);
